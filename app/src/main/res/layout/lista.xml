<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtIdAlumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNombreAlumno"
        android:layout_width="72dp"
        android:layout_height="25dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/txtIdAlumno"
        app:layout_constraintTop_toBottomOf="@+id/txtIdAlumno" />

    <TextView
        android:id="@+id/txtApellidoAlumno"
        android:layout_width="132dp"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtNombreAlumno"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreAlumno" />
</androidx.constraintlayout.widget.ConstraintLayout>